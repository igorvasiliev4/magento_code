<config>
    <modules>
        <MagenThemes_MTGhost>
            <version>1.0.0</version>
        </MagenThemes_MTGhost>
    </modules>
    <frontend>
        <routers>
            <mtghost>
                <use>standard</use>
                <args>
                    <module>MagenThemes_MTGhost</module>
                    <frontName>mtghost</frontName>
                </args>
            </mtghost>
        </routers>
        <layout>
            <updates>
                <mtghost>
                    <file>mtghost.xml</file>
                </mtghost>
            </updates>
        </layout>
        <events>
            <controller_action_postdispatch>
                <observers>
                    <prevnext_set_filtered_category_product_collection>
                        <class>mtghost/observer</class>
                        <method>setPrevNextProductCollection</method>
                    </prevnext_set_filtered_category_product_collection>
                </observers>
            </controller_action_postdispatch>
            <catalog_block_product_list_collection>
                <observers>
                    <mtghost>
                        <type>model</type>
                        <class>mtghost/observer</class>
                        <method>catalogBlockProductCollectionBeforeToHtml</method>
                    </mtghost>
                </observers>
            </catalog_block_product_list_collection>
        </events>
    </frontend>
    <admin>
        <routers>
            <mtghost>
                <use>admin</use>
                <args>
                    <module>MagenThemes_MTGhost</module>
                    <frontName>mtghost</frontName>
                </args>
            </mtghost>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <mtghost>
                    <file>mtghost.xml</file>
                </mtghost>
            </updates>
        </layout>
        <events>
            <controller_action_postdispatch_adminhtml_system_config_save>
                <observers>
                    <mtghost>
                        <type>singleton</type>
                        <class>mtghost/observer</class>
                        <method>configSave</method>
                    </mtghost>
                </observers>
            </controller_action_postdispatch_adminhtml_system_config_save>

            <store_edit>
                <observers>
                    <mtghost>
                        <type>singleton</type>
                        <class>mtghost/observer</class>
                        <method>storeEdit</method>
                    </mtghost>
                </observers>
            </store_edit>
        </events>
    </adminhtml>
    <global>
        <models>
            <mtghost>
                <class>MagenThemes_MTGhost_Model</class>
            </mtghost>
            <core>
                <rewrite>
                    <layout>MagenThemes_MTTheme_Model_System_Layout_Layout</layout>
                </rewrite>
            </core>
        </models>
        <resources>
            <mtghost_setup>
                <setup>
                    <module>MagenThemes_MTGhost</module>
                </setup>
            </mtghost_setup>
        </resources>
        <blocks>
            <mtghost>
                <class>MagenThemes_MTGhost_Block</class>
            </mtghost>
        </blocks>
        <helpers>
            <mtghost>
                <class>MagenThemes_MTGhost_Helper</class>
            </mtghost>
        </helpers>
    </global>
    <default>
        <mtghost>
            <header>
                <sticky_enable>1</sticky_enable>
                <hide_on_mobile>0</hide_on_mobile>
                <compare>1</compare>
				<layout>layout1</layout>
				<header_border>none</header_border>
                <slideshow_position>above</slideshow_position>
            </header>
            <menu>
                <effect>slide</effect>
                <menuleft_effect>fade</menuleft_effect>
                <home>1</home>
                <enable_custom>1</enable_custom>
                <static_identifier>custom_menu</static_identifier>
                <show_if_no_children>0</show_if_no_children>
                <label1>New</label1>
                <label2>Hot!</label2>
                <url_key>about-magento-demo-store:right</url_key>
                <static_identifier>custom_menu:right</static_identifier>
            </menu>
            <category>
                <aspect_ratio>0</aspect_ratio>
                <aspect_ratio_size></aspect_ratio_size>
                <alt_image>0</alt_image>
                <alt_image_column>position</alt_image_column>
                <alt_image_column_value>2</alt_image_column_value>
                <image_width>424</image_width>
                <image_height>541</image_height>
            </category>
            <category_grid>
                <column_count>3</column_count>
                <column_count_768>3</column_count_768>
                <column_count_640>2</column_count_640>
                <column_count_480>2</column_count_480>
                <equal_height>1</equal_height>
                <hover_effect>0</hover_effect>
                <display_rating>2</display_rating>
                <display_addtocart>2</display_addtocart>
                <display_addtolinks>2</display_addtolinks>
                <addtolinks_simple>2</addtolinks_simple>
            </category_grid>
            <category_list>
                <hover_effect>1</hover_effect>
                <addtolinks_simple>1</addtolinks_simple>
            </category_list>
            <product_page>
                <replace_upsell>1</replace_upsell>
                <zoom_enable>1</zoom_enable>
                <zoom_width>350</zoom_width>
                <zoom_height>350</zoom_height>
                <zoom_position>inside</zoom_position>
                <zoom_adjustX></zoom_adjustX>
                <zoom_adjustY></zoom_adjustY>
                <zoom_count>3</zoom_count>
                <zoom_margin>5</zoom_margin>
                <upsell_hover_slider>1</upsell_hover_slider>
                <replace_related>2</replace_related>
                <related_hover_slider>1</related_hover_slider>
                <layout>default</layout>
                <product_social>1</product_social>
            </product_page>
            <product_labels>
                <new>image</new>
                <sale>image</sale>
            </product_labels>
            <footer>
                <links_column_auto_width>1</links_column_auto_width>
            </footer>
            <product_slider>
                <timeout></timeout>
                <speed>400</speed>
                <move_items>0</move_items>
            </product_slider>
            <magento_blocks>
                <top_links>1</top_links>
                <!--<footer_links>1</footer_links>-->
                <footer_newsletter>1</footer_newsletter>
                <related_products_checkbox>0</related_products_checkbox>
            </magento_blocks>
            <sidebar_blocks_home>
                <compare>0</compare>
                <compared>0</compared>
                <viewed>0</viewed>
                <wishlist>0</wishlist>
                <poll>0</poll>
                <tags>0</tags>
                <paypal>0</paypal>
            </sidebar_blocks_home>
            <install>
                <overwrite_blocks>0</overwrite_blocks>
                <overwrite_pages>0</overwrite_pages>
            </install>
            <customization>
                <custom_css>0</custom_css>
            </customization>
        </mtghost>
        <mtghost_design>
            <colors>
                <primary_color>#ff9933</primary_color>
                <text_color>#393939</text_color>
                <link_color>#3b3b3b</link_color>
                <link_hover_color>#da2c2a</link_hover_color>

                <button_bg_color>transparent</button_bg_color>
                <button_color>#000000</button_color>
                <button_border_color>#f9f9f9</button_border_color>
                <button_hover_color>#ffffff</button_hover_color>
                <button_bg_hover_color>#ee2d54</button_bg_hover_color>
                <button_border_hover_color>#ffffff</button_border_hover_color>

                <background_icon_color>#2f2b0d</background_icon_color>
                <icon_color>#ee2d54</icon_color>
                <icon_border_color>#ee2d54</icon_border_color>
                <hover_background_icon_color>#2f2b0d</hover_background_icon_color>
                <hover_icon_color>#ee2d54</hover_icon_color>
                <hover_icon_border_color>#ee2d54</hover_icon_border_color>
                <price_color>#ff9933</price_color>
                <heading_color_title>#272727</heading_color_title>
            </colors>
            <font>
                <font_size>13px</font_size>
                <primary_font_family_group>google</primary_font_family_group>
                <primary_font_family_custom>Arial, "Helvetica Neue", Helvetica, sans-serif</primary_font_family_custom>
                <primary_font_family>Open Sans</primary_font_family>
                <primary_char_latin_ext>0</primary_char_latin_ext>
            </font>
            <page>
                <bg_color>#ffffff</bg_color>
                <bg_image></bg_image>
                <bg_repeat>repeat</bg_repeat>
                <bg_attachment>scroll</bg_attachment>
                <bg_positionx>center</bg_positionx>
                <bg_positiony>top</bg_positiony>
                <patterns>none</patterns>
            </page>
            <header>
                <top_border_color>transparent</top_border_color>
                <bg_top_color>#252525</bg_top_color>
                <patterns>none</patterns>
                <inner_bg_color>transparent</inner_bg_color>
                <color>#000000</color>
                <link_color>#000000</link_color>
                <link_hover_color>#ee2d54</link_hover_color>
            </header>
            <nav>
                <inner_bg_color>#ffffff</inner_bg_color>
                <font_size>14</font_size>
                <font_uppercase>1</font_uppercase>
                <bg_color>transparent</bg_color>
                <color>#222222</color>
                <hover_bg_color>transparent</hover_bg_color>
                <hover_color>#da2c2a</hover_color>

                <canvas_title_color>#ffffff</canvas_title_color>
                <canvas_bg_content_color>#2D2D2D</canvas_bg_content_color>
                <canvas_bg_color>transparent</canvas_bg_color>
                <canvas_color>#ffffff</canvas_color>
                <canvas_hover_bg_color>#3F3F3F</canvas_hover_bg_color>
                <canvas_hover_color>#fff</canvas_hover_color>

                <vertical_bg_title_color>#cfb985</vertical_bg_title_color>
                <vertical_title_color>#343434</vertical_title_color>
                <vertical_link_color>#3b3b3b</vertical_link_color>
                <vertical_link_hover_color>#d02a21</vertical_link_hover_color>

            </nav>
            <main>
                <bg_color>#ffffff</bg_color>
                <patterns>none</patterns>
            </main>
            <product_page>
                <addto_cart_bg_color>transparent</addto_cart_bg_color>
                <addto_cart_color>#000000</addto_cart_color>
                <addto_cart_hover_bg_color>#ee2d54</addto_cart_hover_bg_color>
                <addto_cart_hover_color>#ffffff</addto_cart_hover_color>

                <tab_inner_bg_color>#fff</tab_inner_bg_color>
                <tab_color>#3b3b3b</tab_color>
                <tab_hover_bg_color>#fff</tab_hover_bg_color>
                <tab_hover_color>#ee2d54</tab_hover_color>
                <tab_active_bg_color>#fff</tab_active_bg_color>
                <tab_active_color>#ee2d54</tab_active_color>
                <tab_panel_bg_color>#fff</tab_panel_bg_color>
                <tab_text_color>#272727</tab_text_color>
            </product_page>
            <footer>
                <bg_color>#121214</bg_color>
                <patterns>none</patterns>
            </footer>
            <footer_top>
                <bg_color>transparent</bg_color>
                <link_color>#ffffff</link_color>
                <color>#ffffff</color>
                <hover_color>#da2c2a</hover_color>
            </footer_top>

            <footer_bottom>
                <bg_color>transparent</bg_color>
                <link_color>#ffffff</link_color>
                <color>#ffffff</color>
                <hover_color>#da2c2a</hover_color>
            </footer_bottom>

            <footer_copyright>
                <bg_color>transparent</bg_color>
                <link_active_color>#da2c2a</link_active_color>
                <color>#ffffff</color>
            </footer_copyright>
        </mtghost_design>
        <mtghost_layout>
            <responsive>
                <responsive>1</responsive>
                <rtl_language>0</rtl_language>
                <fluid_width>1</fluid_width>
            </responsive>
        </mtghost_layout>
    </default>
</config>