/**
 * Language switcher template
 *
 * @see Mage_Page_Block_Switch
 */
?>
<?php if(count($this->getStores())>1): ?>

<?php 
	$name_store = $this->htmlEscape(Mage::app()->getStore()->getName());
	$path_img = Mage::getBaseDir('media');
//echo strtolower($name_store);
	$link_flag = Mage::getBaseUrl('media').'wysiwyg/magenthemes/languages/'.strtolower($name_store).'.jpeg';
	$link_flag_default = Mage::getBaseUrl('media').'wysiwyg/magenthemes/languages/unknown.png';
	$filename = $path_img.'/wysiwyg/magenthemes/languages/'.strtolower($name_store).'.jpeg';

?>
<div class="language-topbar">
    <span class="setting-label"><?php echo $this->__("Select Language")?></span>

	<div class="lang-lists">


		<?php foreach ($this->getStores() as $_lang): ?>
          <?php
          $class = "";
          if($name_store === $this->htmlEscape($_lang->getName())){
              $class = "active";
          }
          ?>
			<div class="lang-item <?php echo $class; ?>">
				<a href="<?php echo $_lang->getCurrentUrl() ?>">
					<?php if(file_exists(Mage::getBaseDir('media').'/wysiwyg/magenthemes/languages/'.$this->htmlEscape(strtolower($_lang->getName())).'.jpg')) : ?>
						<span class="img-flag"><img src="<?php echo Mage::getBaseUrl('media').'wysiwyg/magenthemes/languages/'.$this->htmlEscape(strtolower($_lang->getName())).'.jpg' ?>" alt="<?php echo $this->htmlEscape(strtolower($_lang->getName())) ?>"></span>
					<?php else : ?>
						<span class="img-flag"><img src="<?php echo Mage::getBaseUrl('media').'wysiwyg/magenthemes/languages/unknown.png' ?>" alt="<?php echo $this->htmlEscape(strtolower($_lang->getName())) ?>"></span>
					<?php endif; ?>
<!--					<span class="lang-name">--><?php //echo $this->htmlEscape($_lang->getName()) ?><!--</span>-->
				</a>
			</div>
		<?php endforeach; ?>
	</div>
</div>

<?php endif; ?>